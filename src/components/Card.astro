---
const { image, name, date, description, price } = Astro.props;
---

<article class="w-80">
    <img
        id="img"
        class="rounded-lg p-4 max-h-60 mx-auto"
        src={image}
        alt={name}
    />
    <h2 class="text-xl">{name}</h2>
    <p>{date}</p>
    <p>{description}</p>
    <div class="flex justify-between items-center mt-4">
        <p>{price.toFixed(2).replace(".", ",")} â‚¬</p>
        <button class="bg-blue-500 text-white rounded-lg px-4 py-2 hover:bg-blue-600 transition duration-300 cursor-pointer">
            Comprar Entradas
        </button>
    </div>
</article>

<style>
    h2 {
        margin-bottom: 0.5rem;
    }

    article {
        padding: 1rem;
        background-color: #f8f9fa10;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0);
    }
</style>